<h1>Update: <%= @album.name() %></h1>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
<div class="form-group">
  <label for="name">Rename album</label>
  <input id="name" name="name" type="text">
</div>

<div class="form-group">
  <label for="year">Rename year</label>
  <input id="year" name="year" type="text">
</div>

<div class="form-group">
  <label for="genre">Rename genre</label>
  <input id="genre" name="genre" type="text">
</div>

<div class="form-group">
  <label for="artist">Rename artist</label>
  <input id="artist" name="artist" type="text">
</div>


  <button type="submit">Update</button>
</form>

<p><a href="/">Return to album list</a></p>

<form action="/albums/<%= @album.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete album</button>
</form>
